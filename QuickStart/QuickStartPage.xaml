<Window x:Class="QuickStart.QuickStartPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuickStart"
        mc:Ignorable="d"
        AllowsTransparency="True"
        Background="Transparent"
        Title="QuickStartPage" Padding="0" WindowStyle="None" SizeToContent="Height" Width="800">
    <StackPanel Orientation="Vertical" Margin="0">
        <Border BorderThickness="4" BorderBrush="Gray">
            <TextBox FontSize="50" MinWidth="800"/>
        </Border>
        
        <ListView Name="listView"/>
    </StackPanel>
</Window>
